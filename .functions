#!/usr/bin/env bash

function genstr() {
	echo "Random string (25 symbols):";
	pwgen -Bcns 25 1
}

function genpwd() {
	echo "5 strong passwords:";
	echo ""
	pwgen -Bcnsy -r '?!li1I0OB8|`.,:;^"[]{}\/<>()-_+~' 25 5 -1
}

function genpwd1() {
	pwgen -Bcnsy -r '?!li1I0OB8|`.,:;^"[]{}\/<>()-_+~' 25 1 | pbcopy;
	echo "üîê Strong password has been created!"
}

